---
import { Card, CardContent, CardHeader, CardTitle } from '@/components/ui/card';
import { Icon } from 'astro-icon/components';

const educationData = [
  {
    school: "Marrakech National School of Applied Sciences - Cady Ayad University",
    logo: "/logo-ensa.png", // Replace with the actual path to the ENSA logo
    location: "Marrakech, Morocco",
    period: "2019 - Ongoing",
    degree: "Engineering degree - Cyber Defense Engineering and Embedded Telecommunications Systems",
    icon: "lucide:graduation-cap"
  }
];
---

<section id="education" class="py-16">
  <h3 class="text-4xl font-semibold mb-10">Education</h3>
  <div class="space-y-6">
    {educationData.map((edu) => (
      <Card className="bg-background rounded-3xl shadow-lg border p-6 transition-all duration-300 hover:shadow-xl">
        <CardHeader className="flex flex-col md:flex-row items-start md:items-center justify-between pb-6">
          <div class="flex items-center gap-2">
            <img src={edu.logo} alt={edu.school} class="h-14 w-auto rounded-lg p-2" />
            <div>
              <CardTitle className="text-xl font-semibold mb-2 font-alt">{edu.school}</CardTitle>
              <p class="text-muted-foreground flex items-center">
                <Icon name="lucide:map-pin" class="w-4 h-4 mr-2" />
                {edu.location}
              </p>
            </div>
          </div>
          <div class="mt-4 md:mt-0 text-right">
            <span class="bg-primary/10 text-primary px-3 py-1 rounded-full text-sm font-medium">
              {edu.period}
            </span>
          </div>
        </CardHeader>
        <CardContent>
          <div class="flex items-start">
            <Icon name={edu.icon} class="w-6 h-6 mr-3 text-primary flex-shrink-0 mt-1" />
            <p class="text-lg">{edu.degree}</p>
          </div>
        </CardContent>
      </Card>
    ))}
  </div>
</section>

<style>
  .card {
    transition: transform 0.3s ease-in-out;
  }
  .card:hover {
    transform: translateY(-5px);
  }
</style>